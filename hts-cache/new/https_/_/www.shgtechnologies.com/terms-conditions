    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script>
        $(function() {
            
                                                                                    
            var prevScrollpos = window.pageYOffset;
            window.onscroll = function() {
                var currentScrollPos = window.pageYOffset;
                if (prevScrollpos > currentScrollPos) {
                    document.getElementById("navbar").style.top = "0";
                    $("#navbar").removeClass("fadenavbar");
                    $("#navbar").addClass("darkennavbar");
                } else {
                    document.getElementById("navbar").style.top = "-131px";
                    $("#navbar").removeClass("darkennavbar");
                    $("#navbar").addClass("fadenavbar");
                }
                prevScrollpos = currentScrollPos;
            }

            $('.opensidenav').click(function() {$('.sidenav').css('width','350px');});
            $('.closesidenav').click(function() {$('.sidenav').css('width','0');});

            // enable bootstrap tooltip
            $('[data-toggle="tooltip"]').tooltip();

            $('#loginTab').show(); // tab
            $('#registerTab').hide(); // tab
            $('#forgotPasswordEmailTab').hide(); // tab
            $('#loginHelp').hide(); // help text
            $('#checkEmailMobileHelp').hide(); // help text
            $('#checkEmailMobHelp').hide(); // help text
            $('#registerNameHelp').hide(); // help text
            $('#newCustomerOtpHelp').hide(); // help text
            $('#existingCustomerMobileHelp').hide(); // help text
            $('#forgotPasswordEmailOtpHelp').hide(); // help text
            $('#forgotPasswordEmailSetPasswordHelp').hide(); // help text
            $('#forgotPasswordMobileOtpHelp').hide(); // help text
            $('#forgotPasswordMobileSetPasswordHelp').hide(); // help text
            $('#registerHelpEmailid1').hide(); // help text 
            $('#registerHelpEmailid2').hide(); // help text
            $('#registerHelpName').hide(); // help text
            $('#registerHelpMobile').hide(); // help text
            $('#registerHelpOrganizationName').hide(); // help text
            $('#registerHelpRole').hide(); // help text
            $('#registerHelpPassword').hide(); // help text
            $('.registerDivOrganizationName').hide(); // div

            $(document).on('click','.nav_li_login', function(e){
                $('#customerLoginSignupModal').modal('show');
            });

            $(document).on('click','#loginBtn', function(e){
                e.preventDefault();
                var email = $('#loginEmail').val();
                var password = $('#loginPassword').val();
                var rememberme = 0;
                if ($('#loginRememberme').is(":checked")) {rememberme = 1}
                $.ajax({
                    url: 'https://www.shgtechnologies.com/user-login',
                    type: "POST",
                    data: {_token:'EUv9vi1mVdLk7pvwcwDBKUnOFu9A9oL0hf3iANuS', email:email, password:password, remember_me:rememberme},
                    success: function(response) {
                        if(response.status == 'success'){
                            
                            if(response.role_id == '1'){
                                location.href = "https://www.shgtechnologies.com/panel/dashboard";
                            } else if(response.role_id == '4'){
                                location.href = "https://www.shgtechnologies.com/panel/dashboard";
                            } else if(response.role_id == '5'){
                                location.href = "https://www.shgtechnologies.com/report";
                            }
                        } else {
                            $('#loginHelp').show(); // help text
                            Swal.fire({ icon:'error', title:response.error, showConfirmButton:false });
                        }
                    },
                    error:function(err){
                        Swal.fire({ icon:'error', title:'Something went wrong', showConfirmButton:false });
                        console.log('Error is: '+err);
                    }
                });
            });

            $(document).on('click','#registerBtn', function(e){
                e.preventDefault();
                var email = $('#registerEmail').val();
                var name = $('#registerName').val();
                var mobile = $('#registermobile').val();
                var role = $('#registerRole').val();
                var organizationName = $('#registerOrganizationName').val();
                var password = $('#registerPassword').val();
                var validationError = false;
                
                var emailcheck = /^(?:[\w\!\#\$\%\&\'\*\+\-\/\=\?\^\`\{\|\}\~]+\.)*[\w\!\#\$\%\&\'\*\+\-\/\=\?\^\`\{\|\}\~]+@(?:(?:(?:[a-zA-Z0-9](?:[a-zA-Z0-9\-](?!\.)){0,61}[a-zA-Z0-9]?\.)+[a-zA-Z0-9](?:[a-zA-Z0-9\-](?!$)){0,61}[a-zA-Z0-9]?)|(?:\[(?:(?:[01]?\d{1,2}|2[0-4]\d|25[0-5])\.){3}(?:[01]?\d{1,2}|2[0-4]\d|25[0-5])\]))$/;
                
                if (email.match(emailcheck)){
                    $('#registerEmail').removeClass('is-invalid');
                    $('#registerHelpEmailid1').hide();
                    $('#registerHelpEmailid2').hide();
                }else{
                    $('#registerEmail').addClass('is-invalid');
                    $('#registerHelpEmailid1').show();
                    document.getElementById("registerEmail").focus();
                    validationError = true;
                }

                if(name.length < 3){
                    $('#registerName').addClass('is-invalid');
                    $('#registerHelpName').show();
                    document.getElementById("registerName").focus();
                    validationError = true;
                }else{
                    $('#registerName').removeClass('is-invalid');
                    $('#registerHelpName').hide();
                }

                if(mobile.length < 3){
                    $('#registermobile').addClass('is-invalid');
                    $('#registerHelpMobile').show();
                    document.getElementById("registermobile").focus();
                    validationError = true;
                }else{
                    $('#registermobile').removeClass('is-invalid');
                    $('#registerHelpMobile').hide();
                }

                if(role.length == 0){
                    $('#registerRole').addClass('is-invalid');
                    $('#registerHelpRole').show();
                    document.getElementById("registerRole").focus();
                    validationError = true;
                }else{
                    $('#registerRole').removeClass('is-invalid');
                    $('#registerHelpRole').hide();
                }

                if (role == 5 || role == 7){
                    if(organizationName.length == 0){
                        $('#registerOrganizationName').addClass('is-invalid');
                        $('#registerHelpOrganizationName').show();
                        document.getElementById("registerOrganizationName").focus();
                        validationError = true;
                    }else{
                        $('#registerOrganizationName').removeClass('is-invalid');
                        $('#registerHelpOrganizationName').hide();
                    }
                } else {
                    $('#registerOrganizationName').val('');
                    $('#registerOrganizationName').removeClass('is-invalid');
                    $('#registerHelpOrganizationName').hide();
                }

                if(password.length < 6){
                    $('#registerPassword').addClass('is-invalid');
                    $('#registerHelpPassword').show();
                    document.getElementById("registerPassword").focus();
                    validationError = true;
                }else{
                    $('#registerPassword').removeClass('is-invalid');
                    $('#registerHelpPassword').hide();
                }

                if (validationError == true){
                    return false;
                }
                $.ajax({
                    url: "https://www.shgtechnologies.com/user-register",
                    type: "POST",
                    data: {_token:'EUv9vi1mVdLk7pvwcwDBKUnOFu9A9oL0hf3iANuS', email:email, name:name, mobile:mobile, role:role, organizationName:organizationName, password:password},
                    success: function(response) {
                        if(response.status == 'success'){
                            $('#registerEmail').val('');
                            $('#registerName').val('');
                            $('#registerRole').val('');
                            $('#registerOrganizationName').val('');
                            $('#registerPassword').val('');
                            $('#loginTab').show(); // tab
                            $('#registerTab').hide(); // tab
                            $("#customerLoginSignupModal .modal-dialog").removeClass("modal-lg");
                            Swal.fire({ icon:'success', title:'Successfully registered. Proceed with Login', showConfirmButton:false });
                        } else if(response.status == 'duplicate_email'){
                            $('#registerEmail').addClass('is-invalid');
                            $('#registerHelpEmailid2').show(); // help text
                            document.getElementById("registerEmail").focus();
                            Swal.fire({ icon:'warning', title:'Email already exists', showConfirmButton:false });
                        } else {
                            Swal.fire({ icon:'error', title:response.error, showConfirmButton:false });
                        }
                    },
                    error:function(err){
                        Swal.fire({ icon:'error', title:'Something went wrong', showConfirmButton:false });
                        console.log('Error is: '+err);
                    }
                });
            });

            $('#registerRole').change(function(e){
                var role = $('#registerRole').val();
                if (role == 5 || role == 7){
                    $('.registerDivOrganizationName').show(); // div
                } else {
                    $('#registerOrganizationName').val('');
                    $('.registerDivOrganizationName').hide(); // div}
                }
            });

            $(document).on('click','.gotoRegisterTab', function(e){
                $('#registerTab').show(); // tab
                $('#loginTab').hide(); // tab
                $('#forgotPasswordEmailTab').hide(); // tab
                $('#checkEmailMobileHelp').hide(); // help text
                $("#customerLoginSignupModal .modal-dialog").addClass("modal-lg");
            });

            $(document).on('click','.gotoLoginTab', function(e){
                $('#registerTab').hide(); // tab
                $('#loginTab').show(); // tab
                $('#forgotPasswordEmailTab').hide(); // tab
                $('#checkEmailMobileHelp').hide(); // help text
                $("#customerLoginSignupModal .modal-dialog").removeClass("modal-lg");
            });
        });
    </script>
